doctype html
html(class='no-js', lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(name='description', content='Wildling: a toy key-value store.')
        title Wildling

        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700', type='text/css')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css')
        //link(rel='apple-touch-icon-precomposed', href='/apple-touch-icon-precomposed.png')
        style.
            body {
                padding-top: 55px;
                padding-bottom: 20px;
                font-family: 'Open Sans', sans-serif;
            }
            
            @media (max-width: 768px) {
                body {
                    padding-top: 60px;
                }
            }

            @media (max-width: 360px) {
                .trim {
                    display: inline-block;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    max-width: 200px;
                }
            }
        block styles
        link(rel='author', href='humans.txt')

        script(src='js/modernizr-2.6.2-respond-1.1.0.min.js')
    body
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container-fluid
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        span.sr-only Toggle Navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/').trim Wildling
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        //li(class= title === 'Welcome' ? 'active' : undefined)
                        //    a(href='/') Welcome
        .container
            .row
                .col-md-2
                .col-md-8
                    div.visible-sm(style='height: 40px;')
                    //h1= title
                    block content
                .col-md-2

        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        script.
            window.jQuery || document.write('<script src="js/vendor/jquery-1.11.1.min.js"><\/script>')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/knockout/3.3.0/knockout-min.js')
        script(src='//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js')
        block scripts